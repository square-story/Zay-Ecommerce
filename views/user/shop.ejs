    <script>
        // Debounce function
        function debounce(func, wait) {
            let timeout;
            return function(...args) {
                clearTimeout(timeout);
                timeout = setTimeout(() => func(...args), wait);
            };
        }

        // Update URL based on filters and pagination
        function updateURL(page = 1) {
            const searchQuery = document.getElementById('searchQuery').value.trim();
            const category = document.getElementById('sortCategory').value;
            const brand = document.getElementById('sortBrand').value;
            const price = document.getElementById('sortPrice').value;
            const sort = document.getElementById('sortOption').value;

            let url = `/shop?page=${page}&sort=${sort}`;

            if (searchQuery) url += `&search=${encodeURIComponent(searchQuery)}`;
            if (category) url += `&category=${category}`;
            if (brand) url += `&brand=${brand}`;
            if (price) url += `&price=${price}`;

            window.history.pushState(null, null, url);
            location.reload();
        }

        // Event listeners
        document.getElementById('searchQuery').addEventListener('input', debounce(() => updateURL(1), 300));
        document.getElementById('sortCategory').addEventListener('change', () => updateURL(1));
        document.getElementById('sortBrand').addEventListener('change', () => updateURL(1));
        document.getElementById('sortPrice').addEventListener('change', () => updateURL(1));
        document.getElementById('sortOption').addEventListener('change', () => updateURL(1));
        document.getElementById('resetFilters').addEventListener('click', () => {
            document.getElementById('searchQuery').value = '';
            document.getElementById('sortCategory').value = '';
            document.getElementById('sortBrand').value = '';
            document.getElementById('sortPrice').value = '';
            document.getElementById('sortOption').value = 'increasing'; // Default sort
            updateURL(1);
        });

        function addToWishlist(productId) {
