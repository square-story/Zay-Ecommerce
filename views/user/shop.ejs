    <script>
        // JavaScript to handle search input change and reset filters
        document.getElementById('searchQuery').addEventListener('input', debounce(updateFilters, 800));
    
    document.getElementById('resetFilters').addEventListener('click', function(e) {
      e.preventDefault();
      document.getElementById('searchQuery').value = '';
      updateFilters();
    });
    
    function updateFilters() {
      const searchQuery = document.getElementById('searchQuery').value.trim();
      let url = `/shop`;
      if (searchQuery) {
        url += `?search=${searchQuery}`;
      }
      window.location.href = url;
    }
    
    
        function debounce(func, wait) {
      let timeout;
      return function(...args) {
        const later = () => {
          clearTimeout(timeout);
          func(...args);
        };
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
      };
    }
    
      </script>
    <script>
        document.getElementById('sortby').addEventListener('change', function() {
            const sortOption = this.value;
            // Redirect to the products page with the selected sorting option
            window.location.href = `/shop?sort=${sortOption}&page=1`;
        });
        </script>
        <script>
          document.addEventListener('DOMContentLoaded', function() {
              // Event listener for category select
              document.getElementById('sortCategory').addEventListener('change', function() {
                  updateShopURL();
              });
      
              // Event listeners for brand, price range, and sort option selects
              document.getElementById('sortBrand').addEventListener('change', function() {
                  updateShopURL();
              });
      
              document.getElementById('sortPrice').addEventListener('change', function() {
                  updateShopURL();
              });
      
              document.getElementById('sortOption').addEventListener('change', function() {
                  updateShopURL();
              });
      
              // Event listener for reset button/link
              document.getElementById('resetFilters').addEventListener('click', function(event) {
                  event.preventDefault();
                  resetFilters();
              });
      
              // Function to update the shop URL based on selected filters
              function updateShopURL() {
                  const category = document.getElementById('sortCategory').value;
                  const brand = document.getElementById('sortBrand').value;
                  const price = document.getElementById('sortPrice').value;
                  const sort = document.getElementById('sortOption').value;
      
                  // Constructing the new URL with updated parameters
                  let url = '/shop';
      
                  // Adding category parameter if selected
                  if (category) {
                      url += `?category=${category}`;
                  }
      
                  // Adding brand parameter if selected
                  if (brand) {
                      url += `${category ? '&' : '?'}brand=${brand}`;
                  }
      
                  // Adding price parameter if selected
                  if (price) {
                      url += `${category || brand ? '&' : '?'}price=${price}`;
                  }
      
                  // Adding sort option parameter if selected
                  if (sort) {
                      url += `${category || brand || price ? '&' : '?'}sort=${sort}`;
                  }
      
                  // Redirecting to the new URL
                  window.location.href = url;
              }
      
              // Function to reset all filters and revert to default view
              function resetFilters() {
                  window.location.href = '/shop'; // Redirect to the shop page without any filters or sorting
              }
          });
      </script>
      
      
          
            
