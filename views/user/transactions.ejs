<div>
  <% if (transactions.length === 0) { %>
    <p>No transactions found.</p>
  <% } else { %>
    <ul class="list-group">
      <% transactions.forEach(function(transaction) { %>
        <li class="list-group-item">
          <strong><%= transaction.type %></strong> - <%= transaction.amount %> - <%= transaction.description %> - <%= new Date(transaction.date).toLocaleDateString() %>
        </li>
      <% }); %>
    </ul>
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="#" onclick="loadTransactions(<%= currentPage - 1 %>)">Previous</a>
          </li>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="#" onclick="loadTransactions(<%= i %>)"><%= i %></a>
          </li>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="#" onclick="loadTransactions(<%= currentPage + 1 %>)">Next</a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</div>
