<!-- Variant Selection Script -->
<script>
    function selectVariant(pId, pIndex) {
        $.ajax({
            type: "GET",
            url: `/productDetails?index=${pIndex}&id=${pId}`,
            success: (response) => {
                if (response.product) {
                    document.getElementById('productName').setAttribute('data-index', response.index);
                    document.getElementById('quantity').setAttribute('data-stock', response.product.variant[response.index].stock);

                    // Update the navigation tabs
                    const navTabs = document.querySelectorAll('.nav-tabs .nav-link');
                    navTabs.forEach((tab, i) => {
                        tab.classList.toggle('active', i === 0); // Activate the first tab

                        const img = tab.querySelector('img');
                        if (img) {
                            img.setAttribute('src', `/img/productImage/sharp/${response.product.variant[response.index].images[i]}`);
                        }
                    });

                    // Update the tab content
                    const tabContent = document.querySelectorAll('.tab-content .tab-pane');
                    tabContent.forEach((tab, i) => {
                        tab.classList.toggle('active', i === 0); // Show the content of the first tab
                        const img = tab.querySelector('img');
                        if (img) {
                            img.setAttribute('src', `/img/productImage/${response.product.variant[response.index].images[i]}`);
                        }
                    });
                }
            },
            error: (xhr) => {
                console.error("Failed to fetch product details:", xhr);
                showSnackbar('Failed to load product details. Please try again.');
            }
        });
    }
</script>

<!-- Focus and Variant Border Management -->
<script>
    function addBorderListeners(elements) {
        elements.forEach((element, i) => {
            element.style.opacity = 0.5;
            if (i === 0) {
                element.style.border = '2px solid red';
                element.style.opacity = 1;
            }

            element.addEventListener('click', function () {
                elements.forEach(el => {
                    el.style.opacity = 0.5;
                    el.style.border = '';
                });
                element.style.opacity = 1;
                element.style.border = '2px solid red';
            });
        });
    }

    const focusDivs = document.querySelectorAll('.focus');
    const variantSpans = document.querySelectorAll('.variant');

    addBorderListeners(focusDivs);
    addBorderListeners(variantSpans);
</script>

<!-- Image Zoom Functionality -->
<script>
    document.querySelectorAll('.zoom-trigger').forEach(function (img) {
        img.addEventListener('mouseover', function () {
            const myimage = this;
            imageZoom(myimage);
        });
    });

    function imageZoom(img) {
        var container = img.parentElement;

        container.addEventListener('mousemove', function (e) {
            var rect = container.getBoundingClientRect();
            var x = e.clientX - rect.left;
            var y = e.clientY - rect.top;

            var percentX = (x / container.offsetWidth) * 100;
            var percentY = (y / container.offsetHeight) * 100;

            img.style.transformOrigin = percentX + '% ' + percentY + '%';
            img.style.transform = 'scale(2)';
        });

        container.addEventListener('mouseleave', function () {
            img.style.transform = 'scale(1)';
        });
    }
</script>

<!-- Quantity and Add to Cart Functionality -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var quantityInput = document.getElementById('quantity');
        var decBtn = document.querySelector('.dec');
        var incBtn = document.querySelector('.inc');
        var addToCartBtn = document.querySelector('.primary-btn');
        var maxStock = parseInt(quantityInput.getAttribute('data-stock'));

        // Set the max attribute of the input field
        quantityInput.max = maxStock;

        // Decrement button event listener
        decBtn.addEventListener('click', function () {
            var currentValue = parseInt(quantityInput.value) || 1;
            if (currentValue > 1) {
                quantityInput.value = currentValue - 1;
            }
        });

        // Increment button event listener
        incBtn.addEventListener('click', function () {
            var currentValue = parseInt(quantityInput.value) || 0;
            if (currentValue < maxStock) {
                quantityInput.value = currentValue + 1;
            } else {
                showSnackbar('Cannot add more than ' + maxStock + ' items to cart.');
            }
        });

        // Add to Cart button event listener
        addToCartBtn.addEventListener('click', function () {
            var quantity = parseInt(quantityInput.value);
            var productId = '<%= product._id %>'; // Assuming you have this value available
            var addToCartUrl = '/add-cart'; // Replace with your actual endpoint

            // AJAX POST request to add product to cart
            $.ajax({
                type: 'POST',
                url: addToCartUrl,
                data: {
                    productId: productId,
                    quantity: quantity
                },
                success: function (response) {
                    if (response.user) {
                        // Redirect to sign-in page if user is not logged in
                        window.location.href = `/login?message=${encodeURIComponent("First You Want to Login")}`;
                    } else {
                        console.log('Product added to cart successfully');
                        showSnackbar('Item successfully added to your cart!');
                    }
                },
                error: function (xhr, status, error) {
                    var errorMessage = xhr.responseJSON.error || 'Error adding to cart.';
                    console.error('Error adding to cart:', errorMessage);
                    showSnackbar(errorMessage);
                }
            });
        });

        // Function to show snackbar messages
        function showSnackbar(message) {
            var snackbar = document.getElementById('snackbar');
            snackbar.textContent = message;
            snackbar.classList.add('show');
            setTimeout(function () {
                snackbar.classList.remove('show');
            }, 3000); // Hide after 3 seconds
        }
    });
</script>







