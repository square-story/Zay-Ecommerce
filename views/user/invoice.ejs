<body>

  <div class="container mt-5" id="invoice">
    <div class="row">
      <div class="col-md-12">
        <div class="invoice-header bg-dark">
          <h2 class="text-center" style="color: #f8f9fa;">Invoice</h2>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="invoice-body" style="background-color: rgb(231, 224, 224);">
          <h4>Bill To:</h4>
          <p>Zay fashion<br>
            <br>
              calicut, kerala, 673001<br>
              Email: Zay e-commerce<br>
              Phone: +91-90488-34867
          </p>
        
          <hr>
        
          <h4>Invoice Details:</h4>
          <p>Invoice Number: <%=order._id%><br>
            <%const invoiceDate = new Date()%>
            <%const formattedDate = invoiceDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long',day: 'numeric'})%>
              Invoice Date:<%= formattedDate%>
          </p>
        
          <table class="table table-bordered">
              <thead>
                  <tr>
                      <th>name</th>
                      <th>Quantity</th>
                      <th>Unit Price</th>
                      <th>TAX</th>
                      <th>Total</th>
                  </tr>
              </thead>
              <tbody>
        
                  <tr>
                      <td><%= order.productId.name%></td>
                      <td><%= order.quantity%></td>
                      <td>₹<%= order.price%></td>
                      <td>₹<%= (order.price * order.quantity)-18/100%></td>
                      <td>₹<%= order.price * order.quantity%></td>
                  </tr>
                  <!-- Add more rows as needed -->
              </tbody>
          </table>
        
          <hr>
        
          <h4>Total Amount: ₹<%= order.totalPrice%></h4>
        </div>
        </div>

        <!-- Centered download button -->
       
      </div>
    </div>
    <div class="download-button text-start">
      <button type="button" class="btn btn-primary mb-3" onclick="downloadPdf()">Download</button>
    </div>
  </div>

