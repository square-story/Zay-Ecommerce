        .step {
            width: 20px;
            height: 20px;
            border: 2px solid #ddd;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
        }

        .step.active {
            background-color: #26a541;
            color: white;
            border-color: #26a541;
        }

        .line {
            flex-grow: 1;
            height: 3px;
            background-color: #ddd;
