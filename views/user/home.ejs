    <!-- Start Featured Product -->
    <section class="bg-light">
        <div class="container py-5">
            <div class="row text-center py-3">
                <div class="col-lg-6 m-auto">
                  <h1 class="h1">Featured Product</h1>
                  <p>
                    Discover our top picks and best-selling products curated just for you. These featured items are popular among our customers and are guaranteed to meet your highest expectations.
                  </p>
                </div>
              </div>
              
          <div class="row">
            <% product.forEach((prod, index) => { %>
              <div class="col-12 col-md-4 mb-4">
                <div class="card h-100">
                  <a href="/productDetails?id=<%= prod._id %>&index=0">
                    <img src="/img/productImage/sharp/<%= prod.variant[0].images[0] %>" class="card-img-top" alt="...">
                  </a>
                  <div class="card-body">
                    <ul class="list-unstyled d-flex justify-content-between">
                      <li>
                        <% 
                        const rating = productRatings[prod._id.toString()] || 0;
                        for (let i = 1; i <= 5; i++) { 
                        %>
                          <i class="fa fa-star <%= rating >= i - 0.5 ? 'text-warning' : 'text-muted' %>"></i>
                        <% } %>
                      </li>
                      <li class="text-muted text-right"><%= prod.brand %></li>
                    </ul>
                    <a href="/productDetails?id=<%= prod._id %>&index=0" class="h2 text-decoration-none text-dark"><%= prod.name %></a>
                    <p class="card-text">
                      <%= prod.description %>
                    </p>
                    <p class="text-muted">Reviews (<%= reviewCounts[prod._id.toString()] %>)</p>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </section>
      
    <!-- End Featured Product -->

