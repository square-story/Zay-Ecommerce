                        //    return fireSwal('Amount exceeds the maximum limit of 500 choose another payment option');
                        
                        // }

                        console.log(data)
                        $.ajax({
                            type: 'POST',
                            url: '/place-order',
                            data: JSON.stringify(data),
                            contentType: 'application/JSON',
                            success: (response) => {
                                if (response.success) {
                                    location.href = '/order-success';
                                } else if (response.order) {
                                    razorPay(response.order);
                                } else if (response.wallet) {

                                    location.href = '/order-success';
                                } else if (response.fail) {
                                    fireSwal(response.massage);
                                }else if(response.remove) {

                                    fireSwal(response.massage)

                                } else if(response.money){
                                    console.log('money error')
                                    Swal.fire({

                                        title: "Wallet don't have enough money",
                                        text: "Please choose another payment option",
                                        icon: "error",
                                        showConfirmButton: false,
                                        timer: 1500
                                    })
                                }
                            }

                        })

                    } else {
                        console.log('total amount not recived...');

                    }

                } else {
                    console.log('please select payment method');
                    Swal.fire({

                        title: "Select payament method",
                        text: "Please select payament method!",
