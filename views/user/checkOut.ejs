                        });
                    }
                }
            })
        } catch (error) {
            console.log(error);
        }
    }

</script>


<script>
    function applyCoupon() {

        const couponCode = document.getElementById('applyCoupon').value;
        console.log(couponCode)
        if (couponCode) {
            document.getElementById('place-order').setAttribute('data-couponCode', `${couponCode}`);
            const data = { couponCode: couponCode }
            $.ajax({
                type: "POST",
                url: "/check-coupon",
                data: JSON.stringify(data),
                contentType: 'application/json',
                success: (responce) => {
                    if (responce.used) {

                        fireSwal(responce.massage);

                    } else if (responce.limit) {

                        fireSwal(responce.massage);

                    } else if (responce.expired) {

                        fireSwal(responce.massage);

                    } else if (responce.min) {

                        fireSwal(responce.massage);

                    } else if (responce.notAvailable) {

                        fireSwal(responce.massage);

                    } else if (responce.success) {
                        console.log('hel')
                        console.log(responce)

                        document.getElementById('place-order').setAttribute('data-subtotal', `${responce.subtotal}`);
                        document.getElementById('discountedAmount').innerText = `₹${responce.subtotal}`
                        document.getElementById('place-order').setAttribute('data-couponApplied', '1')
                    }
                }
            })

        } else {
            console.log('coupon not applied');

        }


    }
</script>


